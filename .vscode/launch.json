  "version": "0.2.0",
  "configurations": [
    {
      // set root directory to api/ folder
      "cwd": "${workspaceFolder}/api",
      "name": "Python: Flask",
      "type": "python",
      "request": "launch",
      "module": "flask",
      "env": {
        "FLASK_APP": "app.py",
        "FLASK_DEBUG": "1",
        "GEVENT_SUPPORT": "True"
      },
      "args": [
        "run",
        "--no-debugger",
        "--no-reload",
        "--host=0.0.0.0",
        "--port=5001"
      ],
      "jinja": true,
      "justMyCode": true
    }
  ]
}