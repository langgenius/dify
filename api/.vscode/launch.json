    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Celery",
            "type": "debugpy",
            "request": "launch",
            "module": "celery",
            "justMyCode": true,
            "args": ["-A", "app.celery", "worker", "-P", "gevent", "-c", "1", "--loglevel", "info", "-Q", "dataset,generation,mail"],
            "envFile": "${workspaceFolder}/.env",
            "env": {
                "FLASK_APP": "app.py",
                "FLASK_DEBUG": "1",
                "GEVENT_SUPPORT": "True"
            },
            "console": "integratedTerminal",
            "python": "${command:python.interpreterPath}"
        },
        {
            "name": "Python: Flask",
            "type": "debugpy",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "app.py",
                "FLASK_DEBUG": "1",
                "GEVENT_SUPPORT": "True"
            },
            "args": [
                "run",
                "--host=0.0.0.0",
                "--port=5001",
                "--debug"
            ],
            "jinja": true,
            "justMyCode": true,
            "python": "${command:python.interpreterPath}"
        }
    ]
}